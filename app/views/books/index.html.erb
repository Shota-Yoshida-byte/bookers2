<div class="row">
  <div class="col-md-3">
  <h2>User info</h2>

  <% if current_user.image.attached? %>
    <%= image_tag current_user.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>

  <table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th>#introduction</th>
    </tr>
  </tbody>
  </table>
  <div class="row">
    <a class="btn btn-outline-secondary btn-block edit_user_59906" href="users/59906/edit"></a>
  </div>

  </div>

  <h2>New book</h2>

  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>

  <div class="text-success">
    <%= flash[:notice] %>
  </div>
  <div class="text-danger">
    <%= flash[:alret] %>
  </div>

  <% end %>

  <h2>Books</h2>

  <% @books.each do |book| %>

    <p>タイトル</p>
    <span>
      <%=link_to book.title, book_path(book.id) %>
    </span>

  <% end %>

</div>